host: PI_IP=apaw.local; sleep 3; sox -V1 -t coreaudio "BlackHole 16ch" --type raw --rate 44100 --encoding signed-integer --bits 24 --channels 2 - remix 1 2 | nc $PI_IP 2150 | sox -V1 --type raw --rate 44100 --encoding signed-integer --bits 24 --channels 2 - -t coreaudio "BlackHole 2ch"
pi: trap 'ssh -S none root@pi "killall nc arecord aplay"' EXIT > /dev/null; ssh -S none root@pi 'nice -n -20 arecord --verbose --disable-resample --disable-channels --disable-format --disable-softvol --mmap --nonblock --rate 44100 --format S24_3LE --channels 2 --file-type raw - | nice -n -20 nc -l 2150 -k | nice -n -20 aplay --verbose --disable-resample --disable-channels --disable-format --disable-softvol --mmap --nonblock --rate 44100 --format S24_3LE --channels 2 --file-type raw -'

